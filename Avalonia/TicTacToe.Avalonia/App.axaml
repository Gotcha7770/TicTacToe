<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TicTacToe.Avalonia.App"
             RequestedThemeVariant="Default">

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="Styles/TicTacToeStyles.axaml"/>
        <StyleInclude Source="Controls/GameBoard.axaml"/>
        <StyleInclude Source="Controls/Cell.axaml"/>
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="Styles/Colors.axaml"/>
                <ResourceInclude Source="Styles/Converters.axaml"/>
                <ResourceDictionary>
                    <GeometryGroup x:Key="CrossIcon">
                        <Geometry>M 16 16 L 112 112</Geometry>
                        <Geometry>M 112 16 L 16 112</Geometry>
                    </GeometryGroup>
        
                    <Geometry x:Key="NoughtIcon">M 64 16 A 48 48 0 1 0 64 112 A 48 48 0 1 0 64 16</Geometry>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>